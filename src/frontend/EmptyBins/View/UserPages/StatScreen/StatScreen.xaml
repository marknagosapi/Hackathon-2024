<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:micro="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             x:Class="EmptyBins.View.UserPages.StatScreen"
             Title="StatScreen">
    <ScrollView BackgroundColor="Transparent">
        <VerticalStackLayout Spacing="25" Padding="30">
            <Label  Text="Prediction Of Your Expenses for the next month" FontSize="Large" HorizontalOptions="Center" Margin="0,20,0,0" />
            <micro:ChartView x:Name="chartView" WidthRequest="300" HeightRequest="160" BackgroundColor="Transparent"/>
            <Label x:Name="percentageLabel" Text="Percentage of People Spending Less Than You" FontSize="Large" HorizontalOptions="Center" Margin="0,20,0,0" />
            <micro:ChartView x:Name="chartViewPercentage" WidthRequest="300" HeightRequest="160" BackgroundColor="Transparent"/>

            <!-- Your Pie Chart for percentage of people spending less here -->
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>