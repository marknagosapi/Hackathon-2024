<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmptyBins.View.AdminPages.AdminHomeScreens.AdminHomeScreen"
             >

    <VerticalStackLayout Spacing="20" VerticalOptions="Center">

        <Label Text="Hi, Admin!" HorizontalOptions="Center" FontSize="40"/>
        
        <Button Text="Scan QR Code"
                Clicked="OnScanQRCodeClicked"
                BackgroundColor="LightGreen"
                HeightRequest="50"
                WidthRequest="200"/>

        <Button Text="Log Out"
        Clicked="OnLogOutClicked"
        HorizontalOptions="Center"
        BackgroundColor="Orange"
        HeightRequest="40"
        WidthRequest="100"
                VerticalOptions="End"/>
    </VerticalStackLayout>
</ContentPage>
