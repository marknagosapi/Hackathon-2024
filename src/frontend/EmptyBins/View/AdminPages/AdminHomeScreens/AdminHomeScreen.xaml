<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmptyBins.View.AdminPages.AdminHomeScreens.AdminHomeScreen"
             Title="AdminHomeScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Text="Log Out" Grid.Row="0"
                Clicked="OnLogOutClicked"
                HorizontalOptions="End"
                BackgroundColor="Orange"
                HeightRequest="40"
                WidthRequest="100" />

        <VerticalStackLayout Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center">
            <Label Text="Hi, Admin!" HorizontalOptions="Center"/>
            <Button Text="Scan QR Code"
                    Clicked="OnScanQRCodeClicked"
                    BackgroundColor="LightGreen"
                    HeightRequest="50"
                    WidthRequest="200"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
